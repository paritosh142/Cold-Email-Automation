{
  "manifest_version": 3,
  "name": "Email Generator",
  "version": "1.0",
  "description": "Generate and send customized emails",
  "permissions": ["tabs", "activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "./icons/48.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "./icons/48.png"
  }
}
